<html>
  <style>
  body,input,select {
    font-size: 14px;
  }
  </style>
  <body>
    <form id="frm" method="get">
      <input type="text" name="imageUrl" value="#formField#" placeholder="Image Url" style="width:400px;" />
      <input type="text" name="lang" value="#lang#" placeholder="Lang" />
      <select value="#type#" name="type">
        <option value="block">Block</option>
        <option value="paragraph">Paragraph</option>
      </select>

      <label style="margin-left: 15px;" for="saveCbx">Save image?</label>
      <input type="checkbox" id="saveCbx" name="save" value="Save">
      <input type="submit" value="Submit" />
    </form>
    <div style="display:flex;">
      <div style="margin-right:30px;">
        <h3>ORIGINAL</h3>
        <img src="#imageUrl#" style="width:100%;" />
      </div>
      <div>
        <h3>TRANSLATED</h3>
        <img src="#translatedImageUrl#" style="width:100%;" />
      </div>
    </div>

    <div id="spinner" style="display: none; flex-direction: column; justify-content: center; align-items: center; position: absolute; top: 0; left: 0; width: 100%; height: 100%;">
      <img src="public/icons/Spinner.svg" />
    </div>
  </body>

  <script>
    document.getElementById("frm").addEventListener("submit", function (e) {
      document.getElementById("spinner").style.display = "flex";
    })
  </script>
</html>